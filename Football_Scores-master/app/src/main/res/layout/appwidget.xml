<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar_color"
        android:padding="@dimen/widget_title_padding"
        android:text="@string/app_name"
        android:contentDescription="@string/app_name"
        android:textSize="@dimen/widget_title_text_size" />

    <ListView
        android:id="@+id/scores_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_title"
        android:clipToPadding="false"
        android:divider="@color/widget_divider_color"
        android:dividerHeight="@dimen/widget_list_divider_height" />

</RelativeLayout>